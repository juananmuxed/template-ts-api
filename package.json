{
  "name": "template-ts-api",
  "version": "1.0.0",
  "description": "Template for API with Node, Express & Sequelize",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon - exec 'ts-node' src/index.ts",
    "lint": "eslint .",
    "build": "tsc",
    "db:drop": "ts-node src/server/utils/Drop.ts",
    "docker:stop": "docker stop template-api-container || true",
    "docker:build": "docker build . -t template-api:latest",
    "docker:clear": "docker rm template-api-container",
    "docker:run": "docker run -d --restart always -p 3000:3000 --env-file .env.production --name template-api-container --add-host host.docker.internal:host-gateway template-api",
    "docker:prune": "yes | docker system prune -a",
    "docker:deploy": "npm run docker:stop && npm run docker:build && npm run docker:clear && npm run docker:run && npm run docker:prune",
    "patch": "npm version patch -m \"ðŸ©¹ Patch upgrade to version %s\" & git push --tags",
    "minor": "npm version minor -m \"ðŸ’Š Minor upgrade to version %s\" & git push --tags",
    "major": "npm version major -m \"ðŸŽ‰ Major upgrade to version %s\" & git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juananmuxed/template-ts-api.git"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "rest"
  ],
  "author": "MuXeD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/juananmuxed/template-ts-api/issues"
  },
  "homepage": "https://github.com/juananmuxed/template-ts-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.20.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.8.2",
    "eslint-plugin-import": "^2.31.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}
